{
  "security.workspace.trust.untrustedFiles": "open",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  ///////////////////////
  // Workbench
  ///////////////////////
  "http.proxyStrictSSL": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.editor.showIcons": true,
  "workbench.editor.highlightModifiedTabs": true,
  "editor.suggestSelection": "first",
  "explorer.compactFolders": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.wrapTabs": true,
  ///////////////////////
  //        Git
  ///////////////////////
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "scm.defaultViewMode": "tree",
  "files.exclude": {
    "**/.git": false
  },
  "editor.codeLens": false,
  ///////////////////////
  // file specific
  ///////////////////////
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.tabSize": 2,
    "editor.fontLigatures": false,
    "editor.formatOnSave": true
  },
  "[arm-template]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[js]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[go]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  },
  "[helm]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.tabSize": 2
  },
  "[csharp]": {
    "editor.formatOnSave": true
  },
  "[cshtml]": {
    "editor.formatOnSave": false
  },
  "[aspnetcorerazor]": {
    "editor.formatOnSave": false
  },
  "[powershell]": {
    "editor.formatOnSave": false
  },
  "[kotlin]": {
    "editor.formatOnSave": false
  },
  "[c]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnSave": false
  },
  "editor.tokenColorCustomizations": {
    "comments": "#ff9d00",
    "[Material Theme]": {
      "comments": "#229999"
    },
    "textMateRules": [
      {
        "scope": "variable.other.member",
        "settings": {
          "foreground": "#ff9d00"
        }
      }
    ]
  },
  "editor.semanticHighlighting.enabled": true,
  ///////////////////////
  //     editor
  ///////////////////////
  "editor.showFoldingControls": "always",
  "editor.formatOnSave": true,
  "editor.rulers": [
    120
  ],
  "editor.parameterHints.enabled": false,
  "holiday.gearIconStyle": "frosty",
  "editor.fontSize": 12,
  "editor.lineHeight": 1.6,
  "editor.fontFamily": "Comic Code Ligatures",
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "code-eol.highlightNonDefault": true,
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "relative",
  ///////////////////////
  //     files
  ///////////////////////
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,
  "files.associations": {
    "**/.pipelines/**/*.yml": "azure-pipelines",
    "**/helm/**/*.yaml": "helm"
  },
  ///////////////////////
  //     Window
  ///////////////////////
  "window.titleBarStyle": "custom",
  "workbench.sideBar.location": "right",
  ///////////////////////
  //  Terminal
  ///////////////////////
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.fontFamily": "ComicShannsMono Nerd Font",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.1,
  ///////////////////////
  // Debugger
  ///////////////////////
  "debug.openDebug": "openOnDebugBreak",
  // "debug.node.autoAttach": "on",
  "debug.toolBarLocation": "docked",
  "debug.openExplorerOnEnd": true,
  ///////////////////////
  //     Language Specific
  ///////////////////////
  "json.schemas": [
    {
      "fileMatch": [
        "*-reginfo-*",
        "*-dmv-*",
        "*-customer-*",
        "*-trade-*"
      ],
      "url": "./admin/schema/quercus-2020-07-13.json"
    }
  ],
  ///////////////////////
  //     Other
  ///////////////////////
  "azureFunctions.showCoreToolsWarning": false,
  "todo.timekeeping.created.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "go.formatTool": "gofmt",
  "workbench.settings.editor": "json",
  "go.useLanguageServer": true,
  "powershell.powerShellDefaultVersion": "PowerShell",
  "python.languageServer": "Default",
  "azurite.debug": true,
  "azureFunctions.showProjectWarning": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "editor.wordWrap": "off",
  "diffEditor.wordWrap": "off",
  "csharp.suppressBuildAssetsNotification": true,
  "editor.largeFileOptimizations": false,
  "editor.guides.indentation": true,
  "redhat.telemetry.enabled": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "go.toolsManagement.autoUpdate": true,
  "workbench.editor.empty.hint": "hidden",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  }
}